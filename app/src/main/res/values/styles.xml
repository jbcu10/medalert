<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/skyblue</item>
        <item name="android:windowBackground">@color/antiquewhite</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textColorPrimary">@color/dimgray</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/aquamarine</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorAccent">@color/teal</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/skyblue</item>
    </style>
</resources>
